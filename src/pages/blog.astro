---
import "../styles/global.css"
import Head from "../components/Head.astro";
import BaseLayout from "../layouts/BaseLayout.astro"
import BlogPost from "../components/BlogPost.astro";

const pageTitle = "Blog"
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<Head title={pageTitle} />
<body>
    <BaseLayout pageTitle="Blog üìí">
        <p class="my-5 font-semibold text-xl text-[--primary-color]">Aqu√≠ es donde publicare cosas interesantes</p>
        <ul>
            {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} pubDate={post.frontmatter.pubDate}
            imageUrl={post.frontmatter.image.url} imageAlt={post.frontmatter.image.alt}/>)}
        </ul>
    </BaseLayout>
</body>